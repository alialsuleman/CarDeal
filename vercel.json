{
    "version": 2,
    "builds": [
        {
            "src": "src/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "src/index.js"
        },
        {
            "src": "/public/(.*)",
            "dest": "public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "public/$1",
            "continue": true
        },
        {
            "src": "/(.*)",
            "dest": "src/index.js"
        }
    ]
}